#!/bin/bash
# ============================================================
# 환경변수 템플릿
# 사용법: cp env.sh.template env.sh && vi env.sh (실제 값 입력)
# ============================================================

# --- EC2 인스턴스 Private IP ---
export MASTER_PRIVATE_IP=""
export WORKER1_PRIVATE_IP=""
export WORKER2_PRIVATE_IP=""

# --- EC2 인스턴스 ID (start/stop 용) ---
export MASTER_INSTANCE_ID=""
export WORKER1_INSTANCE_ID=""
export WORKER2_INSTANCE_ID=""

# --- AWS 설정 ---
export AWS_REGION="ap-northeast-2"

# --- S3 설정 ---
export S3_BUCKET="softeer-final-porj"
export S3_CODE_PREFIX="spark-job-code"

# --- SSH 설정 ---
# Airflow → Spark Master, 또는 로컬 → EC2 접속용 PEM 키 경로
export SSH_KEY_PATH="~/.ssh/spark-cluster-key.pem"
export SSH_USER="ec2-user"

# --- Spark 설정 ---
export SPARK_HOME="/opt/spark"
